test10MB:
	head -c 10000000 /dev/urandom > data10MB.random
	openssl aes-256-cbc -in data10MB.random -out data10MB.openssl -K 000102030405060708090a0b0c0d0e0f101112131415161718191a1b1c1d1e1f -iv 12345678901234567890123456789012
